{#
/**
 * @file
 * Template for the main page.
 */
#}
<div class="page">
  
  {% embed '@webcrc/block/header/header.twig' with {
    placement: 'sticky-top',
    container: 'fixed',
    color: 'light',
    utility_classes: ['bg-light']
  } %}
    
    {% block toolbar_left %}
      {% if page.toolbar_left %}
        {{ page.toolbar_left }}
      {% endif %}
    {% endblock %}
    
    {% block toolbar_right %}
      {% if page.toolbar_right %}
        {{ page.toolbar_right }}
      {% endif %}
    {% endblock %}

    {% block logo %}
      {% if page.logo %}
        {{ page.logo }}
      {% endif %}
    {% endblock %}

    {% block search %}
      {% if page.search %}
        {{ page.search }}
      {% endif %}
    {% endblock %}

    {% block menu %}
      {% if page.main_menu %}
        {{ page.main_menu }}
      {% endif %}
    {% endblock %}

    {% block breadcrumbs %}
      {% if page.breadcrumbs %}
        {{ page.breadcrumbs }}
      {% endif %}
    {% endblock %}

    {% block top_a %}
      {% if page.top_a %}
        {{ page.top_a }}
      {% endif %}
    {% endblock %}

  {% endembed %}

  {% if page.top_b %}
    <div class="page__top_b">
      <div class="container-fluid p-0">
        <div id="top_b">
          {{ page.top_b }}
        </div>
      </div>
    </div>
  {% endif %}

  <main>
    {% if page.content %}
      <div class="page__content">        
        {{ page.content }}        
      </div>
    {% endif %}
  </main>

  {% if page.bottom_a %}
    <div class="page__bottom_a px-5 py-5">
      <div class="container-fluid p-0">
        <div id="bottom_a" class="d-flex flex-column flex-lg-row px-0 px-sm-5">
          {{ page.bottom_a }}
        </div>
      </div>
    </div>
  {% endif %}

  <footer class="page__footer">
    <div class="container-fluid">
      {% if page.footer_left or page.footer_right %}
        <div class="backgrond-footer-top">
          <div class="page__footer__top">
            <div class="row">
              {% if page.footer_left  %}
                <div class="col-12 col-lg-6">
                  {{ page.footer_left }}
                </div>
              {% endif %}
              {% if page.footer_right %}
                <div class="col-12 col-lg-6 px-0 px-sm-3">
                  {{ page.footer_right }}
                </div>
              {% endif %}
            </div>
          </div>
        </div>
      {% endif %}
      {% if page.footer_bottom %}
        <div class="backgrond-footer-bottom">
          <div class="page__footer__bottom"> 
            <div class="row">
              <div class="col">
                {{ page.footer_bottom }}
              </div>
            </div>
          </div>
        </div>
      {% endif %}
    </div>
  </footer>

  {% if page.extra %}
    {{ page.extra }}
  {% endif %}
</div>


