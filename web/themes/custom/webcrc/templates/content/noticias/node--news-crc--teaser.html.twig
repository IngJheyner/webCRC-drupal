{#
/**
 * @file
 * Template for a Node component.
 */
#}
{%
  set classes = [
  'node',
  node.isPromoted() ? 'node--promoted',
  node.isSticky() ? 'node--sticky',
  not node.isPublished() ? 'node--unpublished',
  node.bundle|clean_class,
  node.bundle|clean_class ~ '--' ~ view_mode|clean_class,
]
%}
<article{{ attributes.addClass(classes) }}>
  <div class="container my-5 text-rize">
    {% block content %}
      <a href="{{ url }}" title="{{ label.0 }}">
        <h1>
          {{ label }}
        </h1>
      </a>
       <time class="text-muted d-inline-block">
          {{ created }}
        </time>
        <div class="media mb-5">
          <span class="align-self-center">
            <a href="{{ url }}" title="{{ label.0 }}">
              {{ content.field_introduction_image }}
            </a>
          </span>
          <div class="media-body align-self-center px-3">
            <a href="/noticias/{{ content.field_category.0['#title']|replace({' ':'-'})|lower }}">
              {{ content.field_category.0['#title'] }}
            </a>
            {{ content.field_introduccion_contenido }}
          </div>
        </div>
    {% endblock %}
  </div>
</article>