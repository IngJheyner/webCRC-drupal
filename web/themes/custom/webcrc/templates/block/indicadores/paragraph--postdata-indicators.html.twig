{#
/**
 * @file
 * Template for the indicators paragraph.
 */
#}
{%
  set classes = [
    'paragraph',
    'paragraph--type--' ~ paragraph.bundle|clean_class,
    view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
    not paragraph.isPublished() ? 'paragraph--unpublished',
    'card flex-row flex-lg-column text-center mb-3 mb-lg-0 mr-lg-2 mr-xl-4 card-indicator'
  ]
%}
{% block paragraph %}
  {% block content %}
    <div {{ attributes.addClass(classes) }}>
      <div class="card-body flex-fill">
        <div class="card-title">
          <p class="count_indicator" data-target="{{ content.field_indicator_value.0  }}">
            0
          </p>
        </div>
        <span class="unit">
          {{ content.field_indicator_unit }}
        </span>
        <span class="description">
          {{ content.field_indicator_description }}
        </span>
      </div>
      <div class="card-footer flex-fill">
        <div class="media flex-row flex-lg-column flex-xl-row">
          <span class="align-self-center font-image p-1 pr-2">
            {{ content.field_indicator_icon }}
          </span>
          <div class="media-body m-0 align-self-center card-title text-left text-lg-center text-xl-left">
            {{ content.field_indicator_title }}
            <a  class="btn btn-link"
                href="{{ content.field_url.0['#url'] }}">
              {{ content.field_url.0['#title'] }}
            </a>
          </div>
        </div>
      </div>
    </div>
  {% endblock %}
{% endblock paragraph %}