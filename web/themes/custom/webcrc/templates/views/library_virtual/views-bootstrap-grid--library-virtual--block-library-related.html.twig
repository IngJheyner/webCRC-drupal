{#
/**
 * @file views-bootstrap-grid.html.twig
 * Default simple view template to display Bootstrap Grids.
 *
 *
 * - columns: Contains rows grouped by columns.
 * - rows: Contains a nested array of rows. Each row contains an array of
 *   columns.
 * - column_type: Contains a number (default Bootstrap grid system column type).
 *
 * @ingroup views_templates
 */
#}
{%
  set classes = [
    'views-view-grid',
  ]
%}
{% if title %}
  <h3>{{ title }}</h3>
{% endif %}
<div id="{{ id }}" {{ attributes.addClass(classes) }}>
  <div class="row">

    {% for row in rows %}

      {% if loop.first %}

        <div {{ row_attributes.addClass(options.row_class ~ ' pl-lg-0') }}>

      {% elseif loop.last %}

        <div {{ row_attributes.addClass(options.row_class ~ ' pr-lg-0') }}>

      {% else %}

        <div {{ row_attributes.addClass(options.row_class) }}>

      {% endif %}
     
        <div class='library__related-content-info bg-white p-lg-4 rounded'>   

        {{ row }}

        </div>

      </div>

    {% endfor %}

  </div>

</div>
