{#
/**
 * @file
 * Template for the socila networks paragraph.
 */
#}
{%
  set classes = [
    'paragraph',
    'paragraph--type--' ~ paragraph.bundle|clean_class,
    view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
    not paragraph.isPublished() ? 'paragraph--unpublished',
    'list-group-item social-networks-item'
  ]
%}
{% block paragraph %}
  {% block content %}
    <li {{ attributes.addClass(classes) }}>
      <a href="{{ content.field_url[0]['#title'] }}" target="_blank">
        {{ content.field_content_icon }}
      </a>
    </li>
  {% endblock %}
{% endblock paragraph %}
